{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext", // or "CommonJS" if using require()
    "moduleResolution": "NodeNext",
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "allowJs": true // IMPORTANT: Add this if your files are .js
  },
  "include": ["."],  // <--- CHANGED FROM "src" TO "."
  "exclude": ["node_modules"]
}